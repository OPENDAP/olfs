                <exclude name="build/**"/>
                <exclude name="doc/javadoc/**"/>
                <exclude name="doc/admin/**"/>
                <!-- Exclude the javadoc directory in the ${doc.dir} dir -->
                <exclude name="doc/_notes/**"/>
                <!-- Exclude the _notes directory in the ${doc.dir} dir -->
                <exclude name="**/*.iml"/>
                <exclude name="**/*.ipr"/>
                <exclude name="**/*.iws"/>
