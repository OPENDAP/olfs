		<mkdir dir="${build.classes}" />
		<mkdir dir="${build.doc}" />
		<mkdir dir="${build.dist}" />
		<mkdir dir="${build.lib}" />
		<mkdir dir="${build.run}" />
		<mkdir dir="${build.libexec}" />

