        <location>/error/error418.jsp</location>
    </error-page>
    <error-page>
        <error-code>500</error-code>
        <location>/error/error500.jsp</location>
    </error-page>
    <error-page>
        <error-code>501</error-code>
        <location>/error/error501.jsp</location>
    </error-page>
    <error-page>
        <error-code>502</error-code>
